<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeatExpress.Views.LoginPage"
             Title="Login Meat Express">

    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="baseline_settings_backup_restore_24.png" Clicked="OnBack"/>
    </ContentPage.ToolbarItems>
    
    <StackLayout Orientation="Vertical" Padding="20" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand">

        <Entry x:Name="Email" Placeholder="Login"/>
        <Entry x:Name="Senha" Placeholder="Senha"/>
        <Button Text="LOGIN" Clicked="OnLogin" Margin="0, 40"/>

    </StackLayout>
    
</ContentPage>